<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 指定了形状内部的填充颜色 -->
    <solid android:color="#004de9" />

    <!-- 指定了形状轮廓的粗细与颜色 -->
    <stroke
        android:width="0.8dp"
        android:color="@color/gray" />

    <!-- 指定了形状四个圆角的半径 -->
    <corners android:radius="15dp" />

    <!-- 指定了形状四个方向的间距 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
</shape>