<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white"/> <!-- 正常状态颜色 -->

    <!-- 指定了形状内部的填充颜色 -->
    <solid android:color="@color/colorPrimary" />

    <!-- 指定了形状轮廓的粗细与颜色 -->
    <stroke
        android:width="1.5dp"
        android:color="@color/white" />

    <!-- 指定了形状四个圆角的半径 -->
    <corners android:radius="15dp" />

    <!-- 指定了形状四个方向的间距 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
</shape>
